# Database Configuration
POSTGRES_DB=solar_platform
POSTGRES_USER=solar_user
POSTGRES_PASSWORD=solar_password
DATABASE_URL=postgresql://solar_user:solar_password@postgres:5432/solar_platform

# InfluxDB Configuration
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=your-super-secret-token
INFLUXDB_ORG=solar
INFLUXDB_BUCKET=solar-bucket

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
NODE_ENV=development

# Backend Configuration
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0
DEBUG=True

# Docker Configuration
DOCKER_INFLUXDB_INIT_MODE=setup
DOCKER_INFLUXDB_INIT_USERNAME=admin
DOCKER_INFLUXDB_INIT_PASSWORD=solar_password
DOCKER_INFLUXDB_INIT_ORG=solar
DOCKER_INFLUXDB_INIT_BUCKET=solar-bucket
DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=your-super-secret-token
